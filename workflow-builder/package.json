{
  "name": "workflow-builder",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:uat": "tsc -b && vite build --mode uat",
    "build:production": "tsc -b && vite build --mode production",
    "build:analyze": "npm run build:production && npx vite-bundle-analyzer dist",
    "lint": "eslint .",
    "preview": "vite preview",
    "preview:uat": "vite preview --mode uat",
    "preview:production": "vite preview --mode production",
    "aws:sync-uat": "aws s3 sync dist/ s3://$AWS_S3_UAT_BUCKET --delete --exclude '*.map'",
    "aws:sync-production": "aws s3 sync dist/ s3://$AWS_S3_PRODUCTION_BUCKET --delete --exclude '*.map'",
    "aws:invalidate-uat": "aws cloudfront create-invalidation --distribution-id $AWS_CLOUDFRONT_UAT_ID --paths '/*'",
    "aws:invalidate-production": "aws cloudfront create-invalidation --distribution-id $AWS_CLOUDFRONT_PRODUCTION_ID --paths '/*'",
    "deploy:uat": "npm run build:uat && npm run aws:sync-uat && npm run aws:invalidate-uat",
    "deploy:production": "npm run build:production && npm run aws:sync-production && npm run aws:invalidate-production"
  },
  "dependencies": {
    "@shopify/polaris": "^13.9.5",
    "@shopify/polaris-icons": "^9.3.1",
    "@xyflow/react": "^12.8.4",
    "clsx": "^2.1.1",
    "lucide-react": "^0.541.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.2",
    "reactflow": "^11.11.4",
    "tailwindcss": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^22.18.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-bundle-analyzer": "^0.18.0"
  }
}
